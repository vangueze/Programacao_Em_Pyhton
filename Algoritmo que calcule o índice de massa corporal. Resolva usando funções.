#Obesidade grave para IMC >= 40
#Obesidade para IMC >= 30 e IMC <= 39.9
#Sobrepeso para IMC >= 25 e IMC <= 29.9
#Peso ideal para IMC >= 18.5 e IMC <= 24.9
#Magreza para IMC <= 18.4

def calculo_imc(peso,altura):
  return peso / pow(altura,2)

def estado(imc):
  if imc >= 40:
    return "Obesidade grave"
  elif imc >= 30 and imc <= 39.9:
    return "Obesidade"
  elif imc >= 25 and imc <= 29.9:
    return "Sobrepeso"
  elif imc >= 18.5 and imc <= 24.9:
    return "Peso ideal"
  else:
    return "Magreza"

peso = float (input("Introduza o peso : "))
altura = float (input("Introduza a altura : "))

imc = calculo_imc(peso,altura)

estado_imc = estado(imc)

print("IMC : ",imc,"\nEstado : ",estado_imc)
